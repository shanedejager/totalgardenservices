<?xml version="1.0"?>
<schema version="0.3">

	<table name="btWhaleNivoSlider">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>
		<field name="fsID" type="I"><unsigned /></field>		
		<field name="theme" type="I1"></field>	
		<field name="effect" type="I1"></field>	

		<field name="slices" type="I"></field>
		<field name="boxCols" type="I"></field>
		<field name="boxRows" type="I"></field>
		
		<field name="animSpeed" type="I"></field>
		<field name="pauseTime" type="I"></field>
		<field name="startSlide" type="I"></field>
		
		<field name="directionNav" type="I1"></field>
		<field name="controlNav" type="I1"></field>
		<field name="controlNavThumbs" type="I1"></field>
		<field name="pauseOnHover" type="I1"></field>
		<field name="manualAdvance" type="I1"></field>

		<field name="prevText" type="C" size="50"></field>	
		<field name="nextText" type="C" size="50"></field>	
		
		<field name="randomStart" type="I1"></field>
		
	</table>
	
	<table name="btWhaleNivoSliderItems">
		<field name="itemId" type="I">
			<key />
			<autoincrement />
			<unsigned />
		</field>
		<field name="bID" type="I"><unsigned /></field>
		<field name="fID" type="I"><unsigned /></field>
		<field name="pageID" type="I" ><unsigned /></field> 
		<field name="itemTitle" type="C" size="255"></field>	
		<field name="itemDesc" type="X2" ></field>	
		<field name="itemUrl" type="C" size="255"></field>
		<field name="groupSet" type="I"></field> 
		<field name="position" type="I"></field>
	</table>
	
</schema>